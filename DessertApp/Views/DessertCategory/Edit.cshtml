@using DessertApp.Models.Entities
@model DessertCategory

@{
    ViewData["Title"] = "Edit Dessert Category";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="Id" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input type="text" class="form-control" id="Stock" name="Stock" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Index", "DessertCategory")" class="btn btn-secondary">Back to List</a>