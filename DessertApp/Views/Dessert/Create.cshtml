@using DessertApp.ViewModels.EntitiesVM
@model DessertVM

@{
    ViewData["Title"] = "Create a new Dessert";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="Name" name="Name" required />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control" id="Description" name="Description" required />
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input class="form-control"
               name="Price"
               asp-for="Price"
               placeholder="Enter a value (e.g. 10.5)" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stock">Stock</label>
        <input class="form-control"
               name="Stock"
               asp-for="Stock"
               placeholder="Enter a value (e.g. 10.5)" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <input asp-for="IsAvailable" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="AnnualDemand">Annual Demand</label>
        <input asp-for="AnnualDemand" type="number" class="form-control" id="AnnualDemmand" name="AnnualDemand" />
    </div>

    <div class="form-group">
        <label asp-for="SelectedCategory"></label>
        <select asp-for="SelectedCategory" class="form-control" asp-items="@Model.DessertCategories">

        </select>
        <span asp-validation-for="SelectedCategory" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a href="@Url.Action("Index", "Dessert")" class="btn btn-secondary">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
