@model DessertApp.Models.Entities.Ingredient

@{
    ViewData["Title"] = "Create Ingredient";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
